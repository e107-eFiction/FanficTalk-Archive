<div class="gb-full"><br/>
	<div id="pagetitle">{featuredstory} {title} by {author}</div>
	<div id="sort">
			<div align="center"><b>{category}</b></div>
	</div>
	<div id="output">
		<div class="jumpmenu">{jumpmenu}</div>
		<div class="listbox">
			<br/>
			<div align="center"><blockquote2>{summary}</blockquote2></div>
	</div>
	<br/>
</div>
